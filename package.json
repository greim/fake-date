{
  "name": "fake-date",
  "version": "1.0.1",
  "description": "util for mocking the Date API",
  "main": "./lib/index.js",
  "types": "./index.d.ts",
  "scripts": {
    "build": "babel src -d lib",
    "prepublish": "yarn build",
    "test:unit": "mocha --require babel-core/register test/**/*.js",
    "test": "yarn build && TZ=UTC yarn run test:unit && TZ='Asia/Bangkok' yarn run test:unit",
    "lint": "eslint src/**/*.js test/**/*.js"
  },
  "keywords": [
    "date",
    "time",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/greim/fake-date.git"
  },
  "bugs": {
    "url": "https://github.com/greim/fake-date/issues"
  },
  "homepage": "https://github.com/greim/fake-date#readme",
  "author": "Greg Reimer <gregreimer@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "eslint": "^5.1.0",
    "mocha": "^5.2.0"
  }
}
